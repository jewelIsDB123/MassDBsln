@model MassDB.Models.Market

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center" style="background-color:cornflowerblue">Edit Mass Market Information</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
